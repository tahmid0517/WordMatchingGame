            android:layout_height="match_parent"
            android:gravity = "center"
            android:onClick = "Btn2x5D1WhenClicked"/>
        <Button
            android:id = "@+id/Btn2x5D2"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity = "center"
            android:onClick = "Btn2x5D2WhenClicked"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:id = "@+id/Btn2x5E1"
