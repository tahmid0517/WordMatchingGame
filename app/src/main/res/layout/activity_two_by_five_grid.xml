            android:layout_height="match_parent"
            android:onClick = "Btn2x5C1WhenClicked"
            android:gravity="center"/>
        <Button
            android:id = "@+id/Btn2x5C2"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:onClick="Btn2x5C2WhenClicked"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:id = "@+id/Btn2x5D1"
